{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/assets/*"]
  },
  "mimeTypes": {
    ".js": "text/javascript",
    ".css": "text/css",
    ".jpg": "image/jpeg",
    ".png": "image/png",
    ".svg": "image/svg+xml"
  },
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/admin-db",
      "serve": "/index.html",
      "statusCode": 200
    },
    {
      "route": "/admin-db/*",
      "serve": "/index.html",
      "statusCode": 200
    },
    {
      "route": "/admin",
      "serve": "/index.html",
      "statusCode": 200
    },
    {
      "route": "/admin/*",
      "serve": "/index.html", 
      "statusCode": 200
    },
    {
      "route": "/assets/*",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    }
  ]
}